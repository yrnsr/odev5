version: '3'
services:
  rethinkdb:
    image: rethinkdb:latest
    ports:
      - "28015:28015"
      - "29015:29015"
    volumes:
      - rethinkdb_data:/data
    environment:
      RETHINKDB_DRIVER_TCP_BACKLOG: 512

  app:
    build: .
    ports:
      - "3000:3000"
    depends_on:
      - rethinkdb
    environment:
      - NODE_ENV=development
    volumes:
      - .:/app

volumes:
  rethinkdb_data:
